{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-all",
            "type": "shell",
            "command": "echo Building all projects",
            "dependsOn": [
                "build-game",
                "build-console"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build-game",
            "type": "shell",
            "command": "dotnet build DawngarGame"
        },
        {
            "label": "build-console",
            "type": "shell",
            "command": "dotnet build DawngarConsole"
        }
    ]
  }

